  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "release:check": "bash ./scripts/release-check.sh",
    "build": "npm run build:js && npm run build:types",
    "build:js": "esbuild src/server.ts src/session-manager.ts src/command-router.ts src/server-command-handlers.ts src/extension-ui.ts src/server-ui-context.ts src/validation.ts src/types.ts src/type-guards.ts src/resource-governor.ts src/command-classification.ts src/command-replay-store.ts src/session-version-store.ts src/command-execution-engine.ts src/session-lock-manager.ts src/session-store.ts src/circuit-breaker.ts src/auth.ts src/bounded-map.ts src/metrics-types.ts src/metrics-emitter.ts src/metrics-index.ts src/threshold-alert-sink.ts src/logger-types.ts src/logger-index.ts src/test.ts src/test-command-classification.ts src/test-session-version-store.ts src/test-command-replay-store.ts src/test-command-execution-engine.ts src/test-threshold-alert-sink.ts src/test-fuzz.ts src/test-integration.ts --outdir=dist --format=esm --platform=node --target=node20 --sourcemap",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "typecheck": "tsgo -config tsconfig.json",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "format:check": "biome format src",
    "check": "npm run typecheck && npm run lint",
    "ci": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm test",
    "start": "node dist/server.js",
    "dev": "esbuild src/server.ts --outdir=dist --format=esm --platform=node --target=node20 --sourcemap=inline --watch",
    "test": "node --experimental-vm-modules dist/test.js",
    "test:integration": "node --experimental-vm-modules dist/test-integration.js",
    "test:fuzz": "node --experimental-vm-modules dist/test-fuzz.js"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "^0.54.0",
    "@mariozechner/pi-ai": "^0.54.0",
    "@mariozechner/pi-coding-agent": "^0.54.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@rslint/tsgo": "^0.2.1",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "esbuild": "^0.27.3",
    "get-port": "^7.1.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
