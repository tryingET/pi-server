    "websocket",
    "stdio"
  ],
  "author": "tryingET",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "pi-server": "dist/server.js"
  },
  "files": [
    "dist/server.js",
    "dist/server.js.map",
    "dist/server.d.ts",
    "dist/server.d.ts.map",
